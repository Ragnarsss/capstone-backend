{
    "name": "asistencia-backend",
    "version": "1.0.0",
    "description": "Backend API del sistema de asistencia - Fastify + WebSocket",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "type-check": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@fastify/http-proxy": "^9.5.0",
        "@fastify/static": "^7.0.4",
        "@fastify/websocket": "10.0.1",
        "@playwright/test": "^1.57.0",
        "@simplewebauthn/server": "^11.0.0",
        "fastify": "4.28.1",
        "ioredis": "5.4.1",
        "jsonwebtoken": "^9.0.2",
        "otplib": "^12.0.1",
        "pg": "^8.13.1",
        "qrcode": "^1.5.3"
    },
    "devDependencies": {
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.14.10",
        "@types/pg": "^8.11.10",
        "@types/qrcode": "^1.5.5",
        "@types/ws": "^8.5.10",
        "@vitest/coverage-v8": "^2.1.8",
        "dotenv": "^17.2.3",
        "tsx": "^4.16.2",
        "typescript": "5.5.4",
        "vitest": "^2.1.8"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
